@using MudBlazor
@using System.Text.RegularExpressions

<MudDialog>
    <TitleContent>
        <MudText>Maestro De Tipos De Documento</MudText>
        <MudSpacer />
        <MudText Style="font-size:x-small; color:cadetblue">vers. @_version</MudText>
    </TitleContent>
    <DialogContent>
        <MudGrid Spacing="2">
            <MudItem xs="12">
                <MudPaper Elevation="4" Class="d-flex flex-column mud-width-full pa-2">
                    <MudText>Contenido de la tabla (simulación)</MudText>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudPaper Elevation="4" Class="d-flex flex-column mud-width-full pa-1">
                    <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.FlexStart">
                        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Success"
                                   Class="w-1/3 px-3 py-1">Cargar</MudButton>
                        <MudSpacer />
                        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Primary"
                                   Class="w-1/3 px-3 py-1">Nuevo</MudButton>
                        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Success"
                                   Class="w-1/3 px-3 py-1">Guardar</MudButton>
                        <MudButton Variant="Variant.Filled" Size="Size.Small" Color="Color.Error"
                                   Class="w-1/3 px-3 py-1">Cancelar</MudButton>
                    </MudStack>
                </MudPaper>
            </MudItem>

            <MudItem xs="12">
                <MudPaper Elevation="4" Class="d-flex flex-column mud-width-full pa-2 mb-4">
                    <MudGrid Spacing="1">
                        <MudItem xs="5">
                            <MudTextField T="string" Label="Código" Placeholder="Máx. 3 números"
                                          MaxLength="3" Pattern="^\d{0,3}$" />
                        </MudItem>
                        <MudItem xs="7">
                            <MudTextField T="string" Label="Nombre" MaxLength="30" />
                        </MudItem>
                        <MudItem xs="3">
                            <MudCheckBox T="bool" Label="Maneja Consecutivo?" Color="Color.Primary" />
                        </MudItem>
                        <MudItem xs="9">
                            <MudTextField T="string" Label="Descripción" MaxLength="100" />
                        </MudItem>
                    </MudGrid>
                </MudPaper>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Cerrar">Cerrar</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [Parameter] public string _version { get; set; } = "1.0.0";

    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Cerrar() => MudDialog.Close();
}

